{
    "manifest_version": 2,
    "name": "Better fanfiction.net",
    "version": "0.1",

    "description": "Adds improved search function to fanfiction.net",
    "web_accessible_resources": ["css/*.css"],

    "content_scripts": [
        {
            "matches": ["*://*.fanfiction.net/*"],
            "js": ["js/preLoad.js"],
            "css": ["css/main.css"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://*.fanfiction.net/*"],
            "js": ["js/frontend.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": ["http://localhost/*"]
}
